{
  "name": "muse",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "./scripts/dev.sh",
    "dev:all": "./scripts/dev.sh --all",
    "dev:lab": "turbo dev --filter=@muse/lab",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "faiss-node"
    ],
    "overrides": {
      "lexical": "^0.39.0",
      "@lexical/clipboard": "^0.39.0",
      "@lexical/code": "^0.39.0",
      "@lexical/devtools-core": "^0.39.0",
      "@lexical/dragon": "^0.39.0",
      "@lexical/hashtag": "^0.39.0",
      "@lexical/headless": "^0.39.0",
      "@lexical/history": "^0.39.0",
      "@lexical/html": "^0.39.0",
      "@lexical/link": "^0.39.0",
      "@lexical/list": "^0.39.0",
      "@lexical/mark": "^0.39.0",
      "@lexical/markdown": "^0.39.0",
      "@lexical/offset": "^0.39.0",
      "@lexical/overflow": "^0.39.0",
      "@lexical/plain-text": "^0.39.0",
      "@lexical/react": "^0.39.0",
      "@lexical/rich-text": "^0.39.0",
      "@lexical/selection": "^0.39.0",
      "@lexical/table": "^0.39.0",
      "@lexical/text": "^0.39.0",
      "@lexical/utils": "^0.39.0",
      "@lexical/yjs": "^0.39.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  }
